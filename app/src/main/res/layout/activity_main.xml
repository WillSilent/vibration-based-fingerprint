<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <Switch
            android:id="@+id/switchVibration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enable Repeatable"
            android:layout_marginTop="20dp"
            android:checked="true"/>

<!--        <Button-->
<!--            android:id="@+id/startVibrationButton"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:text="Start Vibration"-->
<!--            android:layout_marginTop="20dp"/>-->

        <Button
            android:id="@+id/stopVibrationButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stop Vibration"
            android:layout_marginTop="20dp"/>

        <TextView
            android:id="@+id/touchInfoTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Touch the screen to get area and pressure"
            android:textSize="18sp"
            android:layout_gravity="center_horizontal" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

